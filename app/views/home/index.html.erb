<div id="container">
  <section id="content">
    <div id="inner-content">
      <h1>Recently Posted</h1>			
      <div id="posts">
        <% for post in @posts %>
          <div class="article">
          <h2 class="post-title"><%= link_to post.title, post_path(post.dash_url) %></h2>          
          <%= hidden_field(:post, :dash_url) %>
          <section class="content summary">
            <p length="80%"><%= simple_format(truncate(post.content, :length => 220)) %></p>
          </section>
<hr class="post-spacer">
          </div>					
        <% end %>
      </div>
    </div>
  </section>
</div>
